<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="0.8"
        android:background="@color/my_primary">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="220dp"
            android:layout_height="280dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="57dp"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="57dp"
            android:background="@drawable/roundedcorner_image"
            android:padding="20dp"
            android:src="@drawable/get" />

        <ImageView
            android:layout_width="417dp"
            android:layout_height="89dp"
            android:layout_below="@+id/imageView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="29dp"

            android:layout_marginBottom="360dp"
            android:background="@drawable/new2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="361dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="@color/my_secondary2" />

        <TextView
            android:layout_width="314dp"
            android:layout_height="85dp"
            android:layout_alignTop="@+id/topic"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="64dp"
            android:layout_marginTop="61dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="263dp"
            android:text="WELCOME TO AYUSHA"
            android:textColor="@color/black"
            android:textFontWeight="@integer/material_motion_duration_long_1"
            android:textSize="25dp"
            tools:ignore="UnknownId" />


        <Button
            android:id="@+id/getStartedButton"

            android:layout_width="wrap_content"
            android:layout_height="127dp"
            android:layout_below="@+id/imageView"
            android:layout_alignParentStart="true"

            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="57dp"
            android:layout_marginTop="265dp"
            android:layout_marginEnd="43dp"
            android:layout_marginBottom="130dp"


            android:background="@drawable/button_selector"
            android:gravity="center"
            android:text="GET STARTED"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>